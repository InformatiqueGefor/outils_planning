{% extends 'base.html.twig' %}

{% block title %}Stage
{% endblock %}

{% block body %}
	<h1>Stage</h1>

	<table class="table">
		<tbody>
			<tr>
				<th>Id</th>
				<td>{{ stage.id }}</td>
			</tr>
			<tr>
				<th>Nom</th>
				<td>{{ stage.name }}</td>
			</tr>
			<tr>
				<th>Début</th>
				<td>{{ stage.start ? stage.start|date('d-m-Y') : '' }}</td>
			</tr>
			<tr>
				<th>Fin</th>
				<td>{{ stage.end ? stage.end|date('d-m-Y') : '' }}</td>
			</tr>
			<tr>
				<th>Crée le
				</th>
				<td>{{ stage.createdAt ? stage.createdAt|date('d-m-Y') : '' }}</td>
			</tr>
			<tr>
				<th>Mise à jour le
				</th>
				<td>{{ stage.updatedAt ? stage.updatedAt|date('d-m-Y') : '' }}</td>
			</tr>
		</tbody>
	</table>

	<a href="{{ path('app_stage_index') }}">Retour à la liste</a>

	<a href="{{ path('app_stage_edit', {'id': stage.id}) }}">éditer</a>

	{{ include('stage/_delete_form.html.twig') }}
{% endblock %}
