{% extends 'base.html.twig' %}

{% block title %}Formation{% endblock %}

{% block body %}
    <h1>Formation</h1>

    <table class="table">
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ formation.id }}</td>
            </tr>
            <tr>
                <th>Nom</th>
                <td>{{ formation.name }}</td>
            </tr>
            <tr>
                <th>Crée le</th>
                <td>{{ formation.createdAt ? formation.createdAt|date('Y-m-d H:i:s') : '' }}</td>
            </tr>
            <tr>
                <th>Mise à jour le </th>
                <td>{{ formation.updatedAt ? formation.updatedAt|date('Y-m-d H:i:s') : '' }}</td>
            </tr>
            <tr>
                <th>Rncp</th>
                <td>{{ formation.rncp }}</td>
            </tr>
            <tr>
                <th>FormaCode</th>
                <td>{{ formation.formaCode }}</td>
            </tr>
            <tr>
                <th>CodeCpf</th>
                <td>{{ formation.codeCpf }}</td>
            </tr>
        </tbody>
    </table>

    <a href="{{ path('app_formation_index') }}">Retour à la liste</a>

    <a href="{{ path('app_formation_edit', {'id': formation.id}) }}">Editer</a>

    {{ include('formation/_delete_form.html.twig') }}
{% endblock %}
