{% extends 'base.html.twig' %}

{% block title %}Examens
{% endblock %}

{% block body %}
	<h1>Examens</h1>

	<table class="table">
		<tbody>
			<tr>
				<th>Id</th>
				<td>{{ examen.id }}</td>
			</tr>
			<tr>
				<th>Début</th>
				<td>{{ examen.start ? examen.start|date('d-m-Y') : '' }}</td>
			</tr>
			<tr>
				<th>Fin</th>
				<td>{{ examen.end ? examen.end|date('d-m-Y') : '' }}</td>
			</tr>
			<tr>
				<th>Crée le
				</th>
				<td>{{ examen.createdAt ? examen.createdAt|date('d-m-Y') : '' }}</td>
			</tr>
			<tr>
				<th>Mise à jour le</th>
				<td>{{ examen.updatedAt ? examen.updatedAt|date('d-m-Y') : '' }}</td>
			</tr>
		</tbody>
	</table>

	<a href="{{ path('app_examens_index') }}">Retour à la liste</a>

	<a href="{{ path('app_examens_edit', {'id': examen.id}) }}">Editer</a>

	{{ include('examens/_delete_form.html.twig') }}
{% endblock %}
